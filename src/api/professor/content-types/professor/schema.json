{
  "kind": "collectionType",
  "collectionName": "professors",
  "info": {
    "singularName": "professor",
    "pluralName": "professors",
    "displayName": "Professor",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "maxLength": 20
    },
    "family": {
      "type": "string",
      "required": true,
      "minLength": 4
    },
    "marital_status": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "age": {
      "type": "integer"
    },
    "phoen": {
      "type": "string",
      "regex": "^(\\+98|0)?9\\d{9}$"
    },
    "address": {
      "type": "text"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "video": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "videos"
      ]
    },
    "adjectives": {
      "type": "json"
    },
    "educations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::education.education",
      "mappedBy": "professor"
    },
    "teachings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::teaching.teaching",
      "mappedBy": "professor"
    },
    "researches": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::research.research",
      "mappedBy": "professor"
    },
    "honors": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::honor.honor",
      "mappedBy": "professor"
    },
    "skills": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::skill.skill",
      "mappedBy": "professor"
    },
    "activities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::activity.activity",
      "mappedBy": "professor"
    },
    "email": {
      "type": "email"
    }
  }
}
